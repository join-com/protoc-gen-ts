{
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "[go]": {
    "editor.tabSize": 4
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[proto3]": {
    "editor.tabSize": 2
  },
  "protoc": {
    "compile_on_save": false,
    "options": [
      "--proto_path=integrationTests/proto/**/*"
    ]
  }
}
